                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im14"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond6" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im15"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im16"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond2" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayHoriz5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im17"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond8" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im18"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond9" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im19"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond4" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#C6C6C6"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/im20"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_diamond7" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvRules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Keep matching up two of the same object until there are no more to be paired and you clear the board."
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayMainGameScene" />

    <TextView
        android:id="@+id/tvFast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="fast"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRules" />

</androidx.constraintlayout.widget.ConstraintLayout>